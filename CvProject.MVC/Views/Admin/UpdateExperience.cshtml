@using CvProject.ENTITY.Dtos.UserExperienceDtos
@model GetUserExperienceDto

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card-body">

    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <h3>Update Experience</h3>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail4">Company Name</label>
            <input type="text" class="form-control" name="CompanyName" value="@Model.CompanyName">
        </div>

        <div class="form-group">
            <label for="inputEmail4"> Company Country</label>
            <input type="text" class="form-control" name="CompanyCountry" value="@Model.CompanyCountry">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Company City</label>
            <input type="text" class="form-control" name="CompanyCity" value="@Model.CompanyCity">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Position</label>
            <input type="text" class="form-control" name="Position" value="@Model.Position">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Description</label>
            <input type="text" class="form-control" name="Description" value="@Model.Description">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Start Date</label>
            <input type="date" class="form-control" name="ExperienceStartDate" value="@Model.ExperienceStartDate">
        </div>

        <div class="form-group">
            <label for="inputEmail4">End Date</label>
            <input type="date" class="form-control" name="ExperienceEndDate" value="@Model.ExperienceEndDate">
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
    <a href="" class="btn btn-primary">Back</a>
</div>