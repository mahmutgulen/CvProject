@using CvProject.ENTITY.Dtos.UserExperienceDtos
@model List<GetUserExperienceDto>

@{
    ViewData["Title"] = "AdminExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="section gray-bg" id="resume">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title ml-3">
                    <br />
                    <h2>Experiences</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-12 m-15px-tb">
            <div class="resume-box">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>

                            <hr>
                            <div class="icon">
                                <i class="fas fa-briefcase"></i>
                            </div>
                            <span class="time">@item.ExperienceStartDate.Year - @item.ExperienceEndDate.Year</span>
                            <br>
                            <span class="time">@item.CompanyCity, @item.CompanyCountry</span>
                            <h5>@item.Position - @item.CompanyName</h5>
                            <p>@item.Description</p>
                        </li>
                        <a href="/Admin/DeleteExperience/@item.Id/" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                        <a href="/Admin/UpdateExperience/@item.Id/" class="btn btn-secondary">
                            <i class="fa fa-edit"></i>
                        </a>
                    }
                </ul>
                <br />
            </div>
        </div>
        <a href="/Admin/AddExperience" class="btn btn-primary">Add Experience</a>
    </div>
    </div>
</section>