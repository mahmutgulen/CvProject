@using CvProject.ENTITY.Dtos.UserInterestDtos
@model List<GetUserInterestDto>
@{
    ViewData["Title"] = "AdminInterest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row flex-lg-nowrap">

        <div class="col">
            <div class="card-header">
                <h5 class="card-title mb-0">Interest</h5>
            </div>

            <div class="row flex-lg-nowrap">
                <div class="col mb-3">
                    <div class="e-panel card">
                        <div class="card-body">
                            <div class="e-table">
                                <div class="table-responsive table-lg mt-3">

                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>

                                                <th>Name</th>
                                                <th>Actions</th>

                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {

                                                <tr>

                                                    <td>@item.InterestName</td>

                                                    <td>
                                                        <div class="btn-group align-top">
                                                            <a href="/Admin/DeleteInterest/@item.Id" class="btn btn-secondary"><i class="fa fa-trash"></i></a>
                                                        </div>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @* <a href="/Admin/AddInterest" class="btn btn-primary">Add Interest</a>*@

                            <form method="post">


                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <h3>Add Interest</h3>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputEmail4">Interest</label>
                                    <input type="text" class="form-control" name="InterestName">
                                </div>

                                <button type="submit" class="btn btn-primary">Add Interest</button>
                           
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




