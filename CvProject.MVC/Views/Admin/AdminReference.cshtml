@using CvProject.ENTITY.Dtos.UserReferenceDtos
@model List<GetUserReferenceDto>
@{
    ViewData["Title"] = "AdminReference";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="section gray-bg" id="resume">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title ml-3">
                    <br />
                    <h2>References</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-12 m-15px-tb">
            <div class="resume-box">
                <ul style="list-style-type:none;">
                    @foreach (var item in Model)
                    {
                        <li>
                            <hr>
                            <div class="icon">
                                <i class="fa fa-asterisk"></i>
                            </div>
                            <span class="time">@item.ReferenceCompany</span>
                            <br>
                            <span class="time">@item.ReferencePhoneNumber</span>
                            <h5>@item.ReferenceName @item.ReferenceSurname</h5>
                            <p>@item.ReferenceMail</p>
                        </li>
                        <a href="/Admin/DeleteReference/@item.Id/" class="btn btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    }
                </ul>
                <br />
                <a href="/Admin/AddReference" class="btn btn-primary">Add Reference</a>
                <br />
                <br />
            </div>
        </div>
    </div>
</section>