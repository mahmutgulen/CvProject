@using CvProject.ENTITY.Dtos.UserEducationDtos
@model GetUserEducationDto

@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-body">

    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <h3>Update Education</h3>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail4">Education Name</label>
            <input type="text" class="form-control" name="EducationName" value="@Model.EducationName">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Branch</label>
            <input type="text" class="form-control" name="EducationBranch" value="@Model.EducationBranch">
        </div>

        <div class="form-group">
            <label for="inputEmail4"> Education Country</label>
            <input type="text" class="form-control" name="EducationCountry" value="@Model.EducationCountry">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Education City</label>
            <input type="text" class="form-control" name="EducationCity" value="@Model.EducationCity">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Start Date</label>
            <input type="date" class="form-control" name="EducationStartDate" value="@Model.EducationStartDate">
        </div>

        <div class="form-group">
            <label for="inputEmail4">End Date</label>
            <input type="date" class="form-control" name="EducationEndDate" value="@Model.EducationEndDate">
        </div>

        <button type="submit" class="btn btn-primary">Update Education</button>
    </form>
    <br />
    <a href="/Admin/AdminEducation" class="btn btn-primary">Back</a>
</div>