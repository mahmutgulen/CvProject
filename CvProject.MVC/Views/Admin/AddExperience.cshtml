
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card-body">

    <form method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <h3>Add Experience</h3>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail4">Company Name</label>
            <input type="text" class="form-control" name="CompanyName">
        </div>

        <div class="form-group">
            <label for="inputEmail4"> Company Country</label>
            <input type="text" class="form-control" name="CompanyCountry">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Company City</label>
            <input type="text" class="form-control" name="CompanyCity">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Position</label>
            <input type="text" class="form-control" name="Position">
        </div>

         <div class="form-group">
            <label for="inputEmail4">Description</label>
            <input type="text" class="form-control" name="Description">
        </div>

        <div class="form-group">
            <label for="inputEmail4">Start Date</label>
            <input type="date" class="form-control" name="ExperienceStartDate">
        </div>

        <div class="form-group">
            <label for="inputEmail4">End Date</label>
            <input type="date" class="form-control" name="ExperienceEndDate">
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </form>

</div>