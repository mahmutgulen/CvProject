@using CvProject.ENTITY.Dtos.UserLanguageDtos
@model List<GetUserLanguageDto>

<section class="resume-section language-section mb-5">
    <h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Language</h2>
    <div class="resume-section-content">
        <ul class="list-unstyled resume-lang-list">
            @foreach (var item in Model)
            {
                <li class="mb-2"><span class="resume-lang-name font-weight-bold">@item.LanguageName</span> <small class="text-muted font-weight-normal">(@item.LanguageLevel)</small></li>
            }
        </ul>
    </div>
</section>